<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.219"
        app:srcCompat="@drawable/logo2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="409dp"
        android:layout_height="68dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="Welcome to the world of cinemas"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.334" />

    <Button
        android:id="@+id/hmbtn"
        android:layout_width="177dp"
        android:layout_height="52dp"
        android:background="@color/black"
        android:text="Book now"
        android:textColor="#B6AAAA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.868"></Button>

    <RadioGroup
        android:layout_width="350dp"
        android:layout_height="101dp"
        app:layout_constraintBottom_toTopOf="@+id/hmbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/tktbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book tickets" />

        <RadioButton
            android:id="@+id/rfrbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Refreshments" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>