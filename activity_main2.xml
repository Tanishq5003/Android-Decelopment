<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@drawable/background">


    <TextView
        android:id="@+id/textView"
        android:layout_width="404dp"
        android:layout_height="67dp"
        android:gravity="center"
        android:text="@string/bh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <EditText
        android:id="@+id/nme"
        android:layout_width="356dp"
        android:layout_height="58dp"
        android:layout_marginTop="28dp"
        android:hint="@string/booking_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:autofillHints="Name"
        />

        <Spinner
            android:id="@+id/mvnme"
            android:layout_width="264dp"
            android:layout_height="54dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/black"
            android:shadowColor="#B6361A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nme"
            app:layout_constraintVertical_bias="0.0"
            android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/seat"
        android:layout_width="264dp"
        android:layout_height="54dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/black"
        android:shadowColor="#B6361A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mvnme"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/time"
        android:layout_width="264dp"
        android:layout_height="54dp"
        android:layout_marginTop="244dp"
        android:backgroundTint="@color/black"
        android:shadowColor="#B6361A"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mvnme"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/num"
        android:layout_width="264dp"
        android:layout_height="54dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/black"
        android:shadowColor="#B6361A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seat"
        app:layout_constraintVertical_bias="0.0"
        android:spinnerMode="dropdown" />


    <CheckBox
        android:id="@+id/chkbx"
        android:layout_width="288dp"
        android:layout_height="49dp"
        android:text="@string/include_refreshments"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num"
        app:layout_constraintVertical_bias="0.599" />

    <Button
        android:id="@+id/button"
        android:layout_width="164dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:text="@string/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkbx"
        app:layout_constraintVertical_bias="0.722" />


</androidx.constraintlayout.widget.ConstraintLayout>


